@model IEnumerable<GetFinancialDataResponse>

@{
    ViewData["Title"] = "Financials";
    Layout = "_LayoutDashboard";
    string? noRecords = "No Records Found";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asset)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Open)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.High)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Low)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Close)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CloseAdjusted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SplitCoefficient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Successful)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Asset)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Open)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.High)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Low)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Close)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CloseAdjusted)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SplitCoefficient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Successful)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td>
                        @noRecords
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    @noRecords
                </td>
            </tr>
        }
    </tbody>
</table>
