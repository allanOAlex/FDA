@model IEnumerable<GetEarningResponse>

@{

}


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        @ViewBag.Caption
    </div>
    <div class="card-body">
        <table class="dataTable">
            <thead>
                <tr>
                    <th>Symbol</th>
                    <th>Date</th>
                    <th>Quater</th>
                    <th>Eps Est</th>
                    <th>Eps</th>
                    <th>Release Time</th>
                    <th>
                        <button type="button" class="btn btn-primary btn-sm" style="background: #444d6a !important; color:#fff !important;" asp-action="FetchEarnings" asp-controller="FinancialData">
                            Fetch
                        </button>
                    </th>
                </tr>
            </thead>
           
            <tbody>
                @if (Model != null)
                {
                    @if (Model!.Count() > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr style="font-size:15px">
                                <td>@item.Symbol</td>
                                <td>@item.Date</td>
                                <td>@item.Quater</td>
                                <td>@item.EpsEst</td>
                                <td>@item.Eps</td>
                                <td>@item.ReleaseTime</td>
                            </tr>
                        }
                    }
                    
                }
                

            </tbody>
        </table>
    </div>
</div>
